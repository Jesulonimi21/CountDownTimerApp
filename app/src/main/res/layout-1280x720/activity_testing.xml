<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestingActivity"
    android:background="@drawable/download">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/card_chat_2"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/card_chat"
        android:background="#009999"
   >



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="#009999">

           <TextView
               android:id="@+id/quoted_messsage"
               android:layout_margin="5dp"
               android:layout_width="240dp"
               android:layout_height="wrap_content"
               android:background="@android:color/darker_gray"
               android:text="I am text"
               android:paddingLeft="20dp"
               android:paddingTop="5dp"
               android:layout_gravity="right"
               android:textSize="20sp"
               android:visibility="gone"/>
           <TextView
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:layout_margin="10dp"
               android:layout_width="240dp"
               android:layout_height="wrap_content"
               android:background="#009999"
               android:text="www.gliade.com"
               android:textIsSelectable="true"
               android:layout_gravity="right"
               android:textSize="20sp"
               android:autoLink="web"/>


       </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/card_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_text"
                app:cardCornerRadius="5dp"
                android:background="#009999"
                android:layout_margin="5dp"
                android:visibility="visible"
                android:id="@+id/quoted_text"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_width="4dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:lines="2"
                        android:maxLines="4"
                        android:textColor="@android:color/holo_red_dark"
                        android:background="@android:color/holo_red_dark">
                    </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/et_text"
                    android:background="?android:attr/colorBackground"
                    android:padding="4dp"
                    android:text="i am quoted text cdndnkdvdkv  lxlmlxm mmlml mlm lm m"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:maxLines="4"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_insert_emoticon_black_24dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"/>


            <EditText
                android:id="@+id/et_text"
                android:layout_width="wrap_content"
                android:minWidth="200dp"
                android:layout_height="wrap_content"
                android:hint="Type a message"
                app:backgroundTint="@android:color/white"
                android:layout_gravity="left"
                />

                <ImageView
                    android:id="@+id/attachment"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_attach_file_black_24dp" />

                <ImageView
                    android:id="@+id/camera"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_camera_black_24dp"
                    android:layout_marginLeft="7dp"
                    />


        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mic_black_24dp"
        android:layout_marginBottom="20dp"
        android:background="#009999"
        android:padding="4dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/card_chat"
        android:layout_alignParentBottom="true"

        />
    <Button
        android:id="@+id/show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click"/>
</RelativeLayout>